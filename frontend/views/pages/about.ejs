<%- include('../partials/header', { title: 'About', description: 'RetireWise+ – NISM VA Certified, AMFI Registered mutual fund distributor based in Pune. Education-first investing platform.' }) %>

<style>
  :root {
    --brand-green: #1a3c31;
    --brand-gold: #b59b5d;
    --bg-light: #f9fbff;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--bg-light);
    color: #333;
  }

  .hero-title {
    font-weight: 800;
    font-size: 3.5rem;
    color: #111;
    letter-spacing: -1px;
    line-height: 1.1;
  }

  @media (max-width: 768px) {
    .hero-title { font-size: 2.4rem; }
  }
  @media (max-width: 480px) {
    .hero-title { font-size: 2rem; }
  }

  .gradient-text {
    background: linear-gradient(90deg, var(--brand-green), var(--brand-gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .btn-brand-solid {
    background-color: var(--brand-green);
    color: white;
    border: none;
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    transition: opacity 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .btn-brand-outline {
    background: transparent;
    border: 1.5px solid var(--brand-green);
    color: var(--brand-green);
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
  }

  .btn-brand-solid:hover {
    opacity: 0.9;
    color: white;
  }

  .btn-brand-outline:hover {
    background: var(--brand-green);
    color: white;
  }

  .section-spacing {
    padding: 100px 0;
  }

  .advisor-tag {
    display: inline-block;
    background: #e9f0ee;
    color: var(--brand-green);
    padding: 5px 15px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 700;
    margin-bottom: 20px;
    text-transform: uppercase;
  }

  .disclosure-card {
    background: #fff;
    border: 1px solid #eee;
    border-left: 5px solid var(--brand-gold);
    padding: 30px;
    border-radius: 12px;
  }

  .certification-badge {
    background: white;
    border: 2px solid var(--brand-green);
    border-radius: 12px;
    padding: 25px;
    text-align: center;
    transition: all 0.3s ease;
    height: 100%;
  }

  .certification-badge:hover {
    box-shadow: 0 10px 30px rgba(26, 60, 49, 0.15);
    transform: translateY(-5px);
  }

  .certification-icon {
    font-size: 3rem;
    color: var(--brand-green);
    margin-bottom: 15px;
  }

  .partnership-card {
    background: linear-gradient(135deg, rgba(26, 60, 49, 0.05) 0%, rgba(181, 155, 93, 0.05) 100%);
    border: 2px solid var(--brand-green);
    border-radius: 16px;
    padding: 30px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .partnership-card:hover {
    box-shadow: 0 15px 40px rgba(26, 60, 49, 0.1);
    border-color: var(--brand-gold);
  }

  .partnership-logo {
    max-width: 180px;
    height: auto;
    margin-bottom: 20px;
    transition: transform 0.3s ease;
  }

  .partnership-card:hover .partnership-logo {
    transform: scale(1.05);
  }

  .feature-list {
    list-style: none;
    padding: 0;
  }

  .feature-list li {
    padding: 10px 0;
    padding-left: 30px;
    position: relative;
    color: #555;
  }

  .feature-list li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--brand-green);
    font-weight: 700;
    font-size: 1.2rem;
  }

  .stat-card {
    background: white;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    height: 100%;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--brand-green);
  }

  .stat-label {
    color: #999;
    font-size: 0.9rem;
    margin-top: 10px;
  }

  .timeline-item {
    position: relative;
    padding-left: 40px;
    margin-bottom: 30px;
  }

  .timeline-item:before {
    content: "";
    position: absolute;
    left: 0;
    width: 20px;
    height: 20px;
    background: var(--brand-green);
    border-radius: 50%;
    border: 3px solid white;
    box-shadow: 0 0 0 3px var(--brand-green);
  }

  .timeline-item:not(:last-child):after {
    content: "";
    position: absolute;
    left: 8px;
    top: 25px;
    width: 3px;
    height: 60px;
    background: #ddd;
  }

  .section-title {
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--brand-green);
    margin-bottom: 50px;
  }

  .subsection-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--brand-green);
    margin-bottom: 30px;
  }
</style>

